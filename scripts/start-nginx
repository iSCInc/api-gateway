#!/bin/bash
# Set NGINX_BIN to the nginx binary if you want something different
NGINX=${NGINX_BIN:-nginx}
WORKING=$(dirname $0)/../nginx
mkdir -p $WORKING/logs

if [ ! -d /var/log/nginx ]; then
  echo "******************************************"
  echo "Please create /var/log/nginx as your user:"
  echo "sudo mkdir /var/log/nginx && sudo chown $USER /var/log/nginx"
  echo "******************************************"
fi

$NGINX -p $WORKING/ -c conf/nginx.conf 
